        <CheckBox Foreground="White" Content="Cliente" HorizontalAlignment="Left" Margin="26,102,0,0" VerticalAlignment="Top"/>
        <CheckBox Foreground="White" Content="Funcionário" HorizontalAlignment="Left" Margin="122,102,0,0" VerticalAlignment="Top"/>
